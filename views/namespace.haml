%h1
  #{prefix} Namespace #{name}

- unless namespaces.empty?
  %h2
    Namespaces
  %ul
    - namespaces.each do |namespace|
      %li
        %a{:href => "#{file_prefix}namespaces/#{namespace.safe_path_from_module_name("#{prefix}#{name}::")}.html"}
          #{namespace.name}
        %p.description
          #{namespace.comment}

- unless classes.empty?
  %h2
    Classes
  %ul
    - classes.each do |klass|
      %li
        %a{:href => "#{file_prefix}#{klass.file.gsub(/#{Regexp.escape(File.extname(klass.file))}$/, ".html")}"}
          #{klass.name}
        %p.description
          #{klass.comment}

- unless functions.empty?
  %h2
    Methods
  %ul
    - functions.each do |function|
      %li
        %p.name
          #{function.name}
        %p.description
          #{function.comment}
