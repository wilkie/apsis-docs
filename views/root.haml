%h1#root
  #{prefix} API Documentation

- unless namespaces.empty?
  %h2#namespaces
    Namespaces
  %ul.namespaces
    - namespaces.each do |namespace|
      %li.namespace
        %a{:href => "#{file_prefix}_#{namespace.name}"}
          #{namespace.name}
        %p.description
          #{namespace.comment}

- unless classes.empty?
  %h2#classes
    Classes
  %ul.classes
    - classes.each do |klass|
      %li.class
        %a{:href => "#{file_prefix}#{klass.file.gsub(/#{Regexp.escape(File.extname(klass.file))}$/, ".html")}"}
          #{klass.name}
        %p.description
          #{klass.comment}

- unless functions.empty?
  %h2#functions
    Methods
  %ul.functions
    - functions.each do |function|
      %li.function
        %ul.parameters
          - function.parameters.each do |parameter|
            %li.parameter
              #{parameter.name}
        %p.name
          #{function.name}
        %p.description
          #{function.comment}
